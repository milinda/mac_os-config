#! /usr/bin/env bash

# DESCRIPTION
# Installs Homebrew software.

# EXECUTION
# Homebrew
if ! command -v brew > /dev/null; then
  ruby -e "$(curl --location --fail --silent --show-error https://raw.githubusercontent.com/Homebrew/install/master/install)"
  export PATH="/usr/local/bin:$PATH"
  printf "export PATH=\"/usr/local/bin:$PATH\"\n" >> $HOME/.bash_profile
fi

# Readline
brew install readline

# OpenSSL
brew install openssl

# OpenSSL OSX CA
brew tap raggi/ale
brew install openssl-osx-ca

# Bash
brew install bash

# Bash Completion
brew install bash-completion

# Fish
brew install fish

# cloc
brew install cloc

# Colorized Cat
brew install ccat

# Diff So Fancy
brew install diff-so-fancy

# direnv
brew install direnv

# ExifTool
brew install exiftool

# FLAC
brew install flac

# FZF
brew install fzf

# Git
brew install git

# Go
brew install go

# GPG
brew install gpg

# GPG Agent
brew install gpg-agent

# Graphviz
brew install graphviz

# Htop
brew install htop

# HTTPie
brew install httpie

# ImageMagick
brew install imagemagick

# Ioping
brew install ioping

# JSON CLI Parser
brew install jq

# libffi
brew install libffi

# libyaml
brew install libyaml

# lnav
brew install lnav

# Lynis
brew install lynis

# Mac App Store CLI
brew install mas

# Namebench
brew install namebench

# Network Grep
brew install ngrep

# Node
brew install node

# Parallel
brew install parallel

# Peco
brew install peco

# Redis
brew install redis

# ShellCheck
brew install shellcheck

# Tag
brew install tag

# Terminal Notifier
brew install terminal-notifier

# The Silver Searcher
brew install the_silver_searcher

# Tree
brew install tree

# Watchman
brew install watchman

brew tap homebrew/science
brew install r ant

brew install python
